extends layout 

block content 
  h1=title
  if bookinstance_list.length 
    ul 
      each instance in bookinstance_list
        li 
          a(href=instance.url) #{instance.book.title} : #{instance.imprint} 
          | -&nbsp;
          case instance.status
            when 'Available': span.text-success #{instance.status}
            when 'Maintenance': span.text-danger #{instance.status}
            default: span.text-warning #{instance.status}
          if instance.status!='Available'
            span  (Due: #{instance.due_back_formatted})
  else 
    p There are no book copies in this Library.